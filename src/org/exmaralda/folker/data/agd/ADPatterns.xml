<?xml version="1.0" encoding="UTF-8"?>
<patterns>
    <level level="2" name="minimaltranskription">
        <pattern name="AD_WORD">
            <regex>([\d\p{L}\']+)</regex>
            <comment>any sequence of alphabetic letters</comment>
        </pattern>
        <pattern name="AD_SPACE">
            <regex> </regex>
            <comment>the space symbol</comment>
        </pattern>
        <pattern name="AD_PUNCTUATION">            
            <regex>[\W]+</regex>
            <comment></comment>
        </pattern>   
        <pattern name="AD_NONVERBAL">
            <!-- ((1) Ja, (1)) -->
            <regex>\(\([^\)]+\)\)</regex>
            <comment></comment>
        </pattern>
        
        
    </level>



</patterns>
