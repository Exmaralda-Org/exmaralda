		<!-- Period -->
		<char>.</char>
		<!-- Exclamation mark -->
		<char>!</char>
		<!-- Question mark -->
		<char>?</char>
		<!-- Three dots (ellipsis) -->
		<char>…</char>
		<!-- Plain quotation mark -->
		<char>"</char>
		<!-- Apostrophe -->
		<char>'</char>
		<!-- Colon -->
		<char>:</char>
		<!-- Semicolon -->
		<char>;</char>
		<!-- Comma -->
		<char>,</char>
		<!-- Hyphen -->
		<char>-</char>
		<!-- Underscore -->
		<char>_</char>
		<!-- Ligatur sign -->
		<char>&#x203F;</char>
		<!-- Dash -->
		<char>&#x2012;</char>
		<!-- Forward slash -->
		<char>/</char>
		<!-- Open round parenthesis -->
		<char>(</char>
		<!-- Close round parenthesis -->
		<char>)</char>
		<!-- "Spanish" question mark -->
		<char>&#x00BF;</char>
		<!-- "Spanish" exclamation point -->
		<char>&#x00A1;</char>
		<!-- "Spanish" opening quotation -->
		<char>&#x00AB;</char>
